@param String id
@param String label
@param boolean checked = false

<div class="col">
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="${id}" name="${id}" checked="${checked}">
        <label class="form-check-label" for="${id}">${label}</label>
    </div>
</div>